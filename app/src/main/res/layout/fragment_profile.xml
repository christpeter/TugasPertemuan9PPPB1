<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Greeting and User Name -->
        <TextView
            android:id="@+id/greeting_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Malam, Ikhwan Hanif pridaus"
            android:textColor="#555555"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_profile"

        <!-- Basic Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8F8F8"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:cornerRadius="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#777777"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ikhwan@example.com"
                android:textColor="#000000"
                android:textSize="16sp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Telepon"
                android:textColor="#777777"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+62 812-3456-7890"
                android:textColor="#000000"
                android:textSize="16sp"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- Settings Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengaturan"
            android:textColor="#555555"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Account Settings Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F8F8F8"
                android:layout_marginBottom="8dp"
                android:text="Pengaturan Akun"
                android:textColor="#333333" />

            <!-- Security Settings Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F8F8F8"
                android:layout_marginBottom="8dp"
                android:text="Keamanan"
                android:textColor="#333333" />

            <!-- Help Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F8F8F8"
                android:layout_marginBottom="8dp"
                android:text="Bantuan"
                android:textColor="#333333" />

            <!-- About Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F8F8F8"
                android:text="Tentang Aplikasi"
                android:textColor="#333333" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
